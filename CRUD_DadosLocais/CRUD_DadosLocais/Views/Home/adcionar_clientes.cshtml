@model Cliente
@{
    ViewData["Subtitle"] = "Adcionar Cliente";
}

<h2 class="titulo">@ViewBag.Subtitle</h2>
<hr />

<div class="card bg-light p-5">
    <form asp-controller="home" asp-action="adcionar_clientes">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            @Html.TextBoxFor(model => model.Nome)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            @Html.TextBoxFor(model => model.Telefone)
        </div>

        <a asp-controller="home" asp-action="Index" class="btn btn-primary">Voltar</a>
        <button class="btn btn-primary">Guardar</button>
    </form>
</div>

