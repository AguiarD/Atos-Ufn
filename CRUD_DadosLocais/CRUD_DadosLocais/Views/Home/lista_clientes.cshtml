@model IEnumerable<CRUD_DadosLocais.Models.Cliente>
@{
    ViewData["Subtitle"] = "Clientes Registrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.Subtitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="home" asp-action="adcionar_clientes" class="btn btn-primary">Adcionar clientes ...</a>
    </div>
</div>


@if (Model.Count() == 0)
{
    <p>Não existem clientes registrados.</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Telefone</td>
                    <td class="text-right">
                        <a asp-controller="home" asp-action="editar_cliente" asp-route-id="@cliente.Id" class="btn btn-primary">Editar</a>
                        <a asp-controller="home" asp-action="eliminar_cliente" asp-route-id="@cliente.Id" class="btn btn-primary">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total: <b>@Model.Count()</b></p>
}

<div>
    <a asp-controller="home" asp-action="Index" class="btn btn-primary">Voltar</a>
</div>