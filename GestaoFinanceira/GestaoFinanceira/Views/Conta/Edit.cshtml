@model GestaoFinanceira.Models.Conta

@{
    ViewData["Title"] = "Editar";
}

<h1>Conta</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DescConta" class="control-label"></label>
                <input asp-for="DescConta" class="form-control" />
                <span asp-validation-for="DescConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObsConta" class="control-label"></label>
                <input asp-for="ObsConta" class="form-control" />
                <span asp-validation-for="ObsConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inativo" class="control-label"></label>
                <input asp-for="Inativo" class="form-control" />
                <span asp-validation-for="Inativo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="navNovo">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
