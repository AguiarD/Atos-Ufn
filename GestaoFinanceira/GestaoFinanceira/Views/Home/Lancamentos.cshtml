@model IEnumerable<GestaoFinanceira.Models.Lancamento>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<table class="table table-sm table-striped table-hover table-responsive-md text-center">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Grupo</th>
            <th>Conta</th>
            <th>Obs</th>
            <th>Previsao</th>
            <th>Baixa</th>
            <th>Inativo</th>
            <th>Editar</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lancamento in @Model)
        {
        <tr>
            <td>@lancamento.tipo</td>
            <td>@lancamento.valor</td>
            <td>@lancamento.grupo</td>
            <td>@lancamento.conta</td>
            <td>@lancamento.obs</td>
            <td>@lancamento.dt_previsao</td>
            <td>@lancamento.dt_baixa</td>
            <td>@lancamento.inativo</td>
            <td><a href="#">Editar</a></td>
            <td><a href="#">Deletar</a></td>
        </tr>
        }

    </tbody>
</table>