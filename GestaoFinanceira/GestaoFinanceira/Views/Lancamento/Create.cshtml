@model GestaoFinanceira.Models.Lancamento

@{
    ViewData["Title"] = "Novo";
}

<h1>Lançamento</h1>

<h4>Novo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoId" class="control-label"></label>
                <select asp-for="TipoId" class ="form-control" asp-items="ViewBag.TipoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrupoId" class="control-label"></label>
                <select asp-for="GrupoId" class ="form-control" asp-items="ViewBag.GrupoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContaId" class="control-label"></label>
                <select asp-for="ContaId" class ="form-control" asp-items="ViewBag.ContaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ObsLancamento" class="control-label"></label>
                <input asp-for="ObsLancamento" class="form-control" />
                <span asp-validation-for="ObsLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtPrevisao" class="control-label"></label>
                <input asp-for="DtPrevisao" class="form-control" />
                <span asp-validation-for="DtPrevisao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtBaixa" class="control-label"></label>
                <input asp-for="DtBaixa" class="form-control" />
                <span asp-validation-for="DtBaixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inativo" class="control-label"></label>
                <input asp-for="Inativo" class="form-control" />
                <span asp-validation-for="Inativo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Novo" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="navNovo">
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
