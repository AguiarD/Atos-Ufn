@*@model GestaoFinanceira.Models.Lancamento*@
@model IEnumerable<GestaoFinanceira.Models.Lancamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Resumo - @ViewBag.Ano</h1>


@*<form>*@
@using (Html.BeginForm("Index", "Lancamento", FormMethod.Post))
{
    <div class="form-group">
        @*<label>Ano</label>*@
        <select class="form-control form-control-lg" id="formAno">
            <option disabled selected>Ano</option>
            <option>2020</option>
            <option>2021</option>
            <option>2022</option>
    @*        @foreach (var lancamento in @Model)
            {
                <option>@lancamento.DtPrevisao.Year</option>
            }*@
        </select>
    </div>
}
@*</form>*@

<hr />

<p>Resumo</p>
<table class="table table-sm table-hover"> @*Atualizar com o loop*@
    <thead>
        <tr class="table-dark">
            <th>
                Tipo
            </th>
            <th>
                Valor
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-secondary">
            <td colspan="2">Geral</td>
        </tr>
        <tr class="table-success">
            <td>
                Receita
            </td>
            <td>
                @ViewBag.Receita
            </td>
        </tr>
        <tr class="table-danger">
            <td>
                Despesa
            </td>
            <td>
                @ViewBag.Despesa
            </td>
        </tr>
        <tr>
            <td>
                Total Geral
            </td>
            <td>
                @ViewBag.SaldoGeral
            </td>
        </tr>
        <tr><td> </td> <td> </td></tr>

        <tr class="table-secondary">
            <td colspan="2">Aberto</td>
        </tr>
        <tr class="table-success">
            <td>
                Receita
            </td>
            <td>
                @ViewBag.ReceitaAberto
            </td>
        </tr>
        <tr class="table-danger">
            <td>
                Despesa
            </td>
            <td>
                @ViewBag.DespesaAberto
            </td>
        </tr>
        <tr>
            <td>
                Total Aberto
            </td>
            <td>
                @ViewBag.SaldoAberto
            </td>
        </tr>

    </tbody>
</table>

<hr />

<p>Resumo por Grupo</p>
<table class="table table-striped table-sm table-hover">
    <thead>
        <tr  class="table-dark">
            <th>Grupo</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Pessoal</td>
            <td>@ViewBag.GrupoPessoal</td>
        </tr>
        <tr>
            <td>Casa</td>
            <td>@ViewBag.GrupoCasa</td>
        </tr>
        <tr>
            <td>Trabalho</td>
            <td>@ViewBag.GrupoTrabalho</td>
        </tr>
        <tr>
            <td>Transporte</td>
            <td>@ViewBag.GrupoTransporte</td>
        </tr>
        <tr>
            <td>Reserva</td>
            <td>@ViewBag.GrupoReserva</td>
        </tr>
        <tr>
            <td>Cartao dia 10</td>
            <td>@ViewBag.GrupoCartaoD10</td>
        </tr>
    </tbody>
</table>