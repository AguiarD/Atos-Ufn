@*@model GestaoFinanceira.Models.Lancamento*@
@model IEnumerable<GestaoFinanceira.Models.Lancamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Resumo - <a class="pResumo">@ViewBag.Mes/@ViewBag.Ano</a></h1>


@*<form>*@
@using (Html.BeginForm("Resumo", "Lancamento", FormMethod.Get))
{
    <div  class="containerForm">
        <div  class="input-group mb-3">
            @*<label>Mes</label>*@
            <select class="form-control" id="mes" name="mes" onchange="funcaoMes(this.value)">
                <option disabled selected>Mes</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                @*@foreach (var lancamento in @Model)
                {
                    <option>@lancamento.DtPrevisao.Year</option>
                }*@
            </select>

            @*<label>Ano</label>*@
            <select class="form-control" id="ano" name="ano" onchange="funcaoAno(this.value)">
                <option disabled selected>Ano</option>
                <option>2020</option>
                <option>2021</option>
                <option>2022</option>
        @*        @foreach (var lancamento in @Model)
                {
                    <option>@lancamento.DtPrevisao.Year</option>
                }*@
            </select>
            <input class="btn btn-outline-secondary" type="submit"/>
        </div>
    </div>
}
@*</form>*@

<hr />

<p class="pResumo">Resumo</p>
<table class="table table-striped table-sm table-hover"> @*Atualizar com o loop*@
    <thead>
        <tr class="table-dark">
            <th>
                Tipo
            </th>
            <th>
                Valor
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-secondary">
            <td colspan="2">Geral</td>
        </tr>
        <tr>
            <td class="tableReceita">
                Receita
            </td>
            <td class="tableReceita">
                @ViewBag.Receita
            </td>
        </tr>
        <tr>
            <td class="tableDespesa">
                Despesa
            </td>
            <td class="tableDespesa">
                @ViewBag.Despesa
            </td>
        </tr>
        <tr>
            <td>
                Total Geral
            </td>
            <td>
                @ViewBag.SaldoGeral
            </td>
        </tr>
        <tr><td> </td> <td> </td></tr>

        <tr class="table-secondary">
            <td colspan="2">Aberto</td>
        </tr>
        <tr>
            <td class="tableReceita">
                Receita
            </td>
            <td class="tableReceita">
                @ViewBag.ReceitaAberto
            </td>
        </tr>
        <tr>
            <td class="tableDespesa">
                Despesa
            </td>
            <td class="tableDespesa">
                @ViewBag.DespesaAberto
            </td>
        </tr>
        <tr>
            <td>
                Total Aberto
            </td>
            <td>
                @ViewBag.SaldoAberto
            </td>
        </tr>

    </tbody>
</table>

<hr />

<p class="pResumo">Resumo por Grupo</p>
<table class="table table-striped table-sm table-hover">
    <thead>
        <tr  class="table-dark">
            <th>Grupo</th>
            <th>Saldo</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Pessoal</td>
            <td class="tableReceita">@ViewBag.GrupoPessoal</td>
        </tr>
        <tr>
            <td>Casa</td>
            <td class="tableDespesa">@ViewBag.GrupoCasa</td>
        </tr>
        <tr>
            <td>Trabalho</td>
            <td class="tableDespesa">@ViewBag.GrupoTrabalho</td>
        </tr>
        <tr>
            <td>Transporte</td>
            <td class="tableDespesa">@ViewBag.GrupoTransporte</td>
        </tr>
        <tr>
            <td>Reserva</td>
            <td class="tableDespesa">@ViewBag.GrupoReserva</td>
        </tr>
        <tr>
            <td>Cartao dia 10</td>
            <td class="tableDespesa">@ViewBag.GrupoCartaoD10</td>
        </tr>
        <tr>
            <td>Cartao dia 15</td>
            <td class="tableDespesa">@ViewBag.GrupoCartaoD15</td>
        </tr>
    </tbody>
</table>