@model IEnumerable<GestaoFinanceira.Models.Lancamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Lançamentos</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>

<form>
    <div class="form-group">
        <label for="selectAno">Ano</label>
        <select class="form-control" id="exampleFormControlSelect1">
            @*<option>2021</option>
                <option>2020</option>
                <option>2019</option>
                <option>2018</option>
                <option>2017</option>*@
            @foreach (var lancamento in @Model)
            {
                <option>@lancamento.dt_previsao.ToString()</option>
            }
        </select>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.conta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.obs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dt_previsao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dt_baixa)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.inativo)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.obs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dt_previsao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dt_baixa)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.inativo)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
