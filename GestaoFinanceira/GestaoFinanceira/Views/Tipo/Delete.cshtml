@model GestaoFinanceira.Models.Tipo

@{
    ViewData["Title"] = "Deletar";
}

<h1>Tipo</h1>

<h3 class="deleteConfirma">Tem certeza que deseja deletar?</h3>
<div>
    @*<h4>Tipo</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescTipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescTipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <div class="navNovo">
            <a asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
